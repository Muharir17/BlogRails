<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<br>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Yakinakan menghapus data ini ?'}, class: 'btn btn-default btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('#pill_users').addClass('active');
</script>

<br>

<%= link_to 'New User', new_user_path %>
