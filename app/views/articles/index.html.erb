<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>
<br/>

<%= link_to 'New Article', new_article_path %>
<br/><br/>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default btn-sm'  %></td>
        <td><%= link_to 'Destroy', article, class: 'btn btn-default btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

